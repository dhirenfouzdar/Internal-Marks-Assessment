<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/AimsDB</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="show_sql">true</property>
    <property name="format_sql">true</property>
    <property name="use_sql_comments">true</property>
    
    <mapping resource="com/aims/resource/UserEntity.hbm.xml"/>
    <mapping resource="com/aims/resource/LectureProfileEntity.hbm.xml"/>
    <mapping resource="com/aims/resource/StudentProfileEntity.hbm.xml"/>
    <mapping resource="com/aims/resource/LectureSubjectEntity.hbm.xml"/>
     <mapping resource="com/aims/resource/IAEntity.hbm.xml"/>
    
  </session-factory>
</hibernate-configuration>